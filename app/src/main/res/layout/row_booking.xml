<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="7dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/row_booking_name"
            app:drawableTint="@color/blue_grey_600"
            android:drawableStart="@drawable/baseline_account_circle_black_24dp"
            />
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/row_booking_subject"
            app:drawableTint="@color/blue_grey_600"
            android:drawableStart="@drawable/baseline_subject_black_24dp"
            />
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/row_booking_grade"
            app:drawableTint="@color/blue_grey_600"
            android:drawableStart="@drawable/baseline_grade_black_24dp"
            />
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:drawableTint="@color/blue_grey_600"
            android:id="@+id/row_booking_date_time"
            android:drawableStart="@drawable/baseline_calendar_today_black_24dp"
            />
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:drawableTint="@color/blue_grey_600"
            android:id="@+id/row_booking_status"
            android:drawableStart="@drawable/baseline_receipt_long_black_24dp"
            />

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_join"
            app:backgroundTint="@color/blue_grey_600"
            android:layout_margin="5dp"
            app:strokeWidth="1dp"
            android:textColor="@color/white"
            app:icon="@drawable/baseline_voice_chat_white_24dp"
            app:iconGravity="textEnd"
            android:id="@+id/row_booking_btn_join"
            style="@style/Widget.MaterialComponents.Button"
            />
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>